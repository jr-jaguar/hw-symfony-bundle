{% extends "JRsBlogBundle::layout.html.twig" %}
{% block body %}
    {% for blog in blogs %}
        <article class="blog">
            <div class="date"><time datetime="{{ blog.created|date('c') }}">{{ blog.created|date('l,F j,Y') }}</time> </div>
            <header>
                <h2><a href="{{ path('JRsBlogBundle_blog_show',{ 'id':blog.id}) }}">{{ blog.title}}</a></h2>
            </header>
            <img src="{{ asset(['image/',blog.image]|join) }}">
            <div class="snipper">
                <p>{{ blog.blog(500) }}</p>
                <p class="continue"><a href="{{ path('JRsBlogBundle_blog_show',{ 'id':blog.id}) }}">Read more...</a></p>
            </div>
            <footer class="meta">
                <p>Коментарии</p>
                <p>Автор <span class="highlight">{{blog.author}}</span>, {{ blog.created|date('h:iA') }}.</p>
                <p>Теги: <span class="highlight">{{ blog.tags }}</span></p>
            </footer>
        </article>
    {% else %}
        <p>There are no blog entries for symblog</p>
    {% endfor %}
{% endblock %}