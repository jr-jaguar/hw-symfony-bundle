{% extends 'JRsBlogBundle::layout.html.twig' %}
{% block title %} Контакты {% endblock %}

{% block body %}
    <header><h1>Контакты JRs Blog</h1></header>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="jrsblog-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <p>Чтобы связатся с нами заполните форму</p>
    <form action="{{ path('JRsBlogBundle_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Отправить" />
    </form>
{% endblock %}